<!-- Find menu name by menu code-->
<form action="/menu/<%=r_Code%>/<%=m_Code%>/detail/add" method="post">
    <% menu.forEach(function(item, index) { %>
        <% if(m_Code == item.Menu_Code) {%>
            <div class="panel panel=default">
                    <div class="panel-heading"><h1><%=item.Menu_Name%></h1></div>
            <%  }%>
    <% })%>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Option</th>
                    <th>Price</th>
                    <th>Check</th>
                </tr>  
            </thead>      
            <tbody>
            <% if(menuOption.length > 0) { %>             
                    <% menuOption.forEach(function(item, index) { %>
                        <% checked = 0; %>
                            <tr>                
                                <td> <%=index+1%></td>                        
                                <td> <%=item.MenuOption_Name%></td>
                                <td> <%=item.Price%></td>

                                <!-- If menu is already checked-->
                                <% menuDetail.forEach(function(item2, index2) {%>
                                    <% if(item.MenuOption_Code == item2.MenuOption_Code) { %>
                                        <td> <input type="checkbox" name="detail" value="<%=item.MenuOption_Code%>" checked="checked"></td>   
                                        <% checked = 1; %>                         
                                    <% } %>
                                <% })%>

                            <!-- Menu is not checked-->
                            <% if(!checked) { %>
                                <td> <input type="checkbox" name="detail" value="<%=item.MenuOption_Code%>"></td>
                            <% } %>
                        </tr>
                    <% }) %>   
            <% } %>      
            </tbody>
        </table>
    </div>
    <div class="pull-right">    
        <input class="btn btn-primary" type="submit" value="Save">    
    </div>
</form>