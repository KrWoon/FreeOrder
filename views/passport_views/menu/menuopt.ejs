<div class="panel panel=default">
        <div class="panel-heading"><h1>Option</h1></div>
<table class="table table-hover">
        <thead>
            <tr>
                <th>No.</th>
                <th>Option</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
        </thead>    
        <tbody>
            <% if(menuOption.length > 0) { %>
                <% menuOption.forEach(function(item, index) { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%=item.MenuOption_Name%></td>
                        <td><%=item.Price%></td>
                        <td><form action="/menu/option/<%=r_Code%>/<%=item.MenuOption_Code%>/delete" method="post"> <input class="btn btn-default btn-sm" type="submit" value="Delete"> </form></td>
                    </tr>
                <% }) %>
            <% } %>              
        </tbody>
    </table>
</div>