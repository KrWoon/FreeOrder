<% include ../bootstrap_up.ejs %>
<nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Free Order</a>
          </div>
          <% if(!login) { %>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" action="/auth/login" method="post">
                        <label for="inputEmail" class="sr-only">Email</label>
                        <input type="email" id="inputEmail" class="form-control" name="username" placeholder="Email" required>

                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>

                        <input class="btn btn-success" type="submit" value="Login">
                    </form>                
                </form>
            </div><!--/.navbar-collapse -->
            </div>
          <% } else { %>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" action="/auth/logout" method="get">
                    <strong class="text-muted"><%= login.Manager_Name %>   
                        <input class="btn btn-success" type="submit" value="Logout">    
                    </strong>                              
                </form>
            </div><!--/.navbar-collapse -->
            </div>
          <% } %>
      </nav>
  
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
        <% if(login) { %>
            <% if(login.Power == 1) { %>
                <h1> Permit Restaurant </h1>
                <p>Administrator can allow new restaurant</p>
            <% } %>            
        <% } else { %>
            <h1> No User</h1>
            <p>This is a main page of application. If you want to use it, please sign in first</p>
            <p><a class="btn btn-primary btn-lg" href="/auth/register" role="button">Sign up &raquo;</a></p>
        <% } %>      
        </div>
      </div>
  
      
      <div class="container">
          <div class="panel panel=default">
                <div class="panel-heading"><h1>Application List</h1></div>
                <% if(login && login.Power == 1) { %>
                    <% if(restaurants.length > 0 ) { %> 
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Restaurant Name</th>
                                    <th>Writer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%restaurants.forEach(function(item, index) {%>
                                <tr>
                                    <td> <%=index+1%></td>
                                    <td> <a href="/form/permit/<%=restaurants[index].Application_Code%>"><%=restaurants[index].Restaurant_Name%></a></td>
                                    <td> <%=restaurants[index].Manager_Name%></td>
                                </tr>            
                                <% }) %>
                            </tbody>
                            </table>
                    <% } else { %>
                        <div class="panel-heading"><h1>No Application</h1></div>
                    <% } %>    
                <% } %>
            </div>
        <hr>
  
        <footer>
          <p>&copy; BBGoo 2018</p>
        </footer>
      </div> <!-- /container -->
<% include ../bootstrap_down.ejs %>