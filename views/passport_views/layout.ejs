        <meta charset="utf-8">
    </head>
    <body>
        <% if(login) { %>
            <p> <a href="/auth/logout">Logout</a> </p>
        <% } else { %>
            <p> 
                <a href="/auth/login">Login</a>
                <a href="/auth/register">Register</a>
            </p>
        <% } %>
        <h1><a href="/home"> Server Side JavaScript</a></h1>
        <ul>
            <% topics.forEach(function(item, index) { %>
            <li><a href="/home/<%=item.uid%>"> <%=item.email%> </a></li>
            <% }); %>        
        </ul>